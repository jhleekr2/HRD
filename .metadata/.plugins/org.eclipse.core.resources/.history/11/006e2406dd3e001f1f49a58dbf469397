package java07_inherit.practice.model;

public class Point {
	
	//멤버필드
	protected int x;
	protected int y;
	
	//Constructer
	public Point() {
//		this.x=0;
//		this.y=0;
		setX(0); // 다른 멤버 메소드를 이용한 구현(setter 사용)
		setY(0);
	}

	public Point(int x, int y) {
//		this.x = x;
//		this.y = y;
		setX(x);
		setY(y);
	}

	//getter, setter
	public int getX() {
		return x;
	}

	public void setX(int x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}

	public void setY(int y) {
		this.y = y;
	}
	
	//메소드 구현
	
	public void draw() {
		System.out.println("(" + x + ", " + y + ")");
	}
}
