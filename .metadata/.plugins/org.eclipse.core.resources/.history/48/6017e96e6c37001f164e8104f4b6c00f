package java03_scanner;

import java.util.Scanner;

public class ScannerQuiz {
	public static void main(String[] args) {
		//학생 정보 관리 프로그램
		   
		//   이름, 나이, 성별, 국어, 영어, 수학
		//   6가지 정보를 저장할 수 있는 변수를 만들고
		//   총점과 평균을 포함한 결과를 출력한다
		   
		//동작 예시)
		   
		//===== 입력 =====
		//Input Name : Alice
		//Input Age : 33
		   
		//Input Gender : F
		   
		//Input Korean : 100
		//Input English : 99
		//Input Mathematics : 97

		//===== 출력 =====
		//이름   나이   성별   국어   영어   수학   총점   평균
		//Alice   33      F      100      99      97      296      98.666666667
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Input Name : ");
		String name = sc.nextLine();
//		sc.nextLine();
//		sc.skip("[\\r\\n]+");
		
		System.out.print("Input Age : ");
		int age = sc.nextInt();
		
		System.out.print("Input Gender : ");
		String gender = sc.next();
		
		System.out.print("Input Korean : ");
		int kor = sc.nextInt();
		
		System.out.print("Input English : ");
		int eng = sc.nextInt();
		
		System.out.print("Input Mathematics : ");
		int mat = sc.nextInt();
		
		System.out.println("이름" + "	" + "나이" + "	" + "성별" + "	" + "국어" + "	" + "영어" + "	" + "수학" + "	" +"평균");
		System.out.println(name + "	" + age + "	" + gender + "	" + kor + "	" + eng + "	" + mat + "	" + ((kor + eng + mat)/3.0));
		
		sc.close();
	}
}
