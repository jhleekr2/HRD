package java04_control.loop;

public class For_01 {
	public static void main(String[] args) {
		
		// 반복문, loop
		// for, while, do-while
		//----------------------------------------------
		
		// for문, for loop
		
//		for( 초기식; 조건식; 증감식 ) {
		// 조건식이	참(true)일 때 실행하는 영역
		// 반복적으로 실행하는 코드 영역
		// 조건식이 거짓이어야만 벗어날 수 있다
//		}
		
		//** for문 실행 순서
		// 1. 초기식 실행
		// 2. 조건식 판별
		//		2-1. true일 때, 3번 항목 수행
		//		2-2. false일 때, for문 중단 (반복문 중단)
		// 3. {}중괄호 영역 코드 실행
		// 4. 증감식 수행
		// 5. 2번 항목 실행
		// -> 초기 -> 조건 -> (실행 -> 증감 -> 조건) ->탈출
		//----------------------------------------------
		
		int i; // 이때 i는 반복(iterate) 조절에 사용하는 변수
		// 따라서, 반복문에서는 대부분 i, j, k, ... 순서로 반복조절 변수를 사용한다.
		
		for( i=0; i<5; i++) {
			
			 System.out.println("HIHI : " + i);
			 
		}
		
		System.out.println("------");
		
		System.out.println("for문 종료 이후 i : " + i);
	}
}
