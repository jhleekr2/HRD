package java05_array;

public class Array_02 {
	public static void main(String[] args) {
		
		int[] arr1;
		arr1 = new int[7];
		
		//----------------------------------------------------------------
		
//		int[] arr2 = new int[13];
//		int arr2[] = new int[13];
//		int                   []                  arr3            = new int            [13]; // 가능하다
		
		int[] arr2 = null; // 일반적으로 = null 부분은 생략 가능
		arr2 = new int[13];
		for(int i=0; i<13; i++) {
			System.out.println(i + " 인덱스 : " + arr2[i]);
		}
		
		// new 연산자로 생성된 공간의 변수들은 기본값으로 채워진다.
		// 정수 - 0
		// 실수 - 0.0
		// 논리 - false(0)
		// 문자 - '\0' (null문자)
		
		// 참조형 - null 
		//----------------------------------------------------------------

		//배열 요소를 생성하고 동시에 초기화한다
		// -> 나열된 데이터 개수 만큼 요소 공간을 생성한다
		int[] arr3 = { 1,2,3,4,5};
		
		//----------------------------------------------------------------

		// 에러
		// 배열 생성과 동시에 초기화는 선언 코드에서만 작성할 수 있다.
		// 단순 대입 코드로 {} 초기화 작성 불가
//		arr3 = { 6,7 };
		
		//----------------------------------------------------------------
		
		char[] chArr = new char[10];
		
		chArr[0] = 'A';
		chArr[1] = 'p';
		chArr[2] = 'p';
		chArr[3] = 'l';
		chArr[4] = 'e';
		
		char[] chArr2 = { 'B', 'a', 'n', 'a', 'n', 'a' };		
		// 이 때 char배열과 String은 비슷하지만, 절대로 같은 것은 아니므로
		// 두개는 따로따로 생각해야 한다(물론, 변환은 가능).
	}
}
