package java05_array;

public class Array_02 {
	public static void main(String[] args) {
		
		int[] arr1;
		arr1 = new int[7];
		
		//----------------------------------------------------------------
		
//		int[] arr2 = new int[13];
//		int arr2[] = new int[13];
//		int                   []                  arr3            = new int            [13]; // 가능하다
		
		int[] arr2 = null; // 일반적으로 = null 부분은 생략 가능
		arr2 = new int[13];
		for(int i=0; i<13; i++) {
			System.out.println(i + " 인덱스 : " + arr2[i]);
		}
		
		// new 연산자로 생성된 공간의 변수들은 기본값으로 채워진다.
		// 정수 - 0
		// 실수 - 0.0
		// 논리 - false(0)
		// 문자 - '\0' (null문자)
		
		// 참조형 - null 
		//----------------------------------------------------------------

		//배열 요소를 생성하고 동시에 초기화한다
		// -> 나열된 데이터 개수 만큼 요소 공간을 생성한다
		int[] arr3 = { 1,2,3,4,5};
	}
}
