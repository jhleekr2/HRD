package java06_class.method;

public class Method_02 {
	
	//매개변수(Parameter) - 정의부
	// -> 메소드 정의의 ()괄호 안에 선언된 변수
	// -> 메소드를 호출할 때 전달(입력)된 데이터를 저장하는 변수
	// -> 여러 개, 여러 종류, 다양한 순서로 작성할 수 있다.
	// 정의 코드 - ( ) -> 매개변수
	// 호출 코드 - 객체.호출 -> 전달인자
//	public static void main(String[] args) 에서 엄밀하게 따지면 args대신 params 가 문법적으로 더 어울리나
//  그냥 관습적으로 args를 써왔기에 args를 쓰는 것이다.
	//전달인자(Argument)
	// -> 메소드를 호출하며 ()괄호 안에 작성한 데이터이다.
	// -> 호출과 함께 전달하며 전달인자값이 매개변수에 저장된다
	// -> 인자, 인수, 전달인자 등으로 부른다
	
	//반환데이터(Return Data)
	//
	
	//------------------------------------------------------------------------------
	//매개변수 없음 - ()괄호 비우기
	//반환데이터 없음 - void타입

	public void method1() {
		System.out.println("Hello");
	}

	//------------------------------------------------------------------------------
	//매개변수 int parameter
	//반환데이터 없음 - void타입

	public void method2(int parameter) {
		System.out.println("전달된 값 : " + parameter);
	}
	
//	------------------------------------------------------------------------------
	//매개변수 없음 - ()괄호 비우기
	//반환타입 - double
	
	public double method3() {
//		return 534.23;
		
		//정상, int데이터를 double반환타입에 맞게 자동 형변환하여 리턴한다
		return 12345; // 자료형은 반환형태 기준이라 int형을 double형으로 자동형변환됨
		// 결국은 12345.0(double)형으로 반환됨.
	}
//	------------------------------------------------------------------------------
	
	//매개변수 - double d, int n
	//반환타입 - char
	public char method4(double d, int n) {
	
	}
}
