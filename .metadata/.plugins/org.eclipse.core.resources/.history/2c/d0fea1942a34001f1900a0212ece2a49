package java01_variables;

public class Variables_05 {
	public static void main(String[] args) {
			
		//학생의 나이
//		int student age; //에러, 띄어쓰기 금지
		int student_age; //띄어쓰기 안하면서 단어 구분 가능(snake case, 뱀 표기법)
		int studentAge; //띄어쓰기 안하면서 단어 구분 가능(camel case, 낙타 등 표기법)
		// 자바에서는 낙타등표기법(camel case)을 권장한다.
		// 지나치게 변수명을 축악하기 보다는, 변수명이 길더라도 읽기 좋은 변수명을 쓰는 것이 좋다.
		// 변수의 이름은 소문자로 시작한다.
		
//		int 1stNumber; //에러, 숫자로 시작할 수 없다.
		
//		int int; //에러, 예약어(키워드)를 사용할 수 없다.
//		int public;
//		int static;
		
		int intData;
		
		// 가급적 의미없는 변수명을 사용하지 않도록 한다!
		int a;
		int b;
		int c;
		
		// 알아보기 힘든 식별자를 사용하면 안된다! 특히 _만 변수 이름으로 쓸 수 없다(JDK 9부터 막았음).
//		int _; 
		int $;
		
		$ = 12345;
		System.out.println( $ );

		int __;
		int __________;
		int _$_$_$$$$$$$$_$_$;
		
		_$_$_$$$$$$$$_$_$ = 123;
		System.out.println(_$_$_$$$$$$$$_$_$);
	
		int number;
		
		int number_;
		int _number;
		// 자바는 number의 보조변수로 number_나 _number로 쓰는 것을 싫어한다. 그냥, 보조 의미들을 여러 단어로 길게 풀어서 쓰는것이 좋다.
		
		int num1;
		int num2;
		int num3;
		
		int maxNumber;
		
	}

}
