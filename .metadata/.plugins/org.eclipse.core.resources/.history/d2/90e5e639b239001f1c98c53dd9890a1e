package java05_array;

public class Array_01 {
	public static void main(String[] args) {
		
		//배열(Array)
		// - 변수들을 나열한 것, 묶음
		// - 같은 자료형의 여러 개의 변수를 하나의 묶음으로 생성하여 사용하는 문법이다.
		// - 여러 개의 변수를 한 번에 선언(생성)할 수 있다.
		// - 변수들의 이름을 고민하는 노력을 줄일 수 있다.
		// - 한꺼번에 만들어진 변수 공간들을 인덱스(index) 번호를 이용하여 관리한다.
		//-----------------------------------------------------------------
		
		int num; // int타입 변수 선언
		num = 123;
		
		//-----------------------------------------------------------------

		//** int[]
		//   int타입 배열
		//   int형 배열
		
		// 모든 배열 타입은 참조형이다
		
		int[] arr; // int배열 타입 (O), int타입(X), int(형)배열 변수 선언(참조형)
		
		// 참조형 변수의 특징 - String 타입을 제외한 모든 참조형 변수는
		// 대입할 때 new를 앞에 써야 한다.
		
		String str = new String ("Apple"); // 정식
		String str2 = "Apple"; // 허용
		
		arr = new int[5]; // int형 배열의 공간 5개 생성
		
		// ** int형 변수 5개를 만들어 연결하고
		// 전체 공간의 이름으로 arr을 부여한다.
	
	
	}
	
}
