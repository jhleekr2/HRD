package java03_scanner;

public class Binary_03 {
	public static void main(String[] args) {
		
		//이항연산자 - 대입(assign)
		// =
		
		// 오른쪽에 있는 값(아무거나)을 왼쪽에 있는 공간(변수)에 저장한다
		// 연산 방향이 오른쪽에서 왼쪽으로 진행된다.
		
		// 오른쪽 항은 값으로 사용할 수 있는 상수, 변수, 연산식 등이 온다
		// 왼쪽 항은 공간으로 사용할 수 있는 변수가 온다.
		
		// 연산자 우선순위가 최하위에 있다.
		//	-------------------------------------------------
		
		int num1 = 10;
		int num2 = 22;
		
		//	-------------------------------------------------
		
		// num1변수에 저장된 값 11을 불러와서 num3변수 공간에 대입한다.
		int num3 = num1;
		
		// --------------------------------------------------
		
		// 대입 연산자는 대입한 값을 연산식에 리턴(반환)한다
		
		int num4, num5, num6;
		
		num6 = num5 = num4 = 33;
//		num6 = num5 = 33;
//		num6 = 33;
		// --------------------------------------------------
		
		// 복합 대입 연산자
		// 다른 연산자와 대입 연산자를 함께 사용하는 연산자
		
		//산술 대입 연산자
		// += -= *= /= %= 항상 오른쪽에 =이 온다.
		
		num1 = 13;
		num2 = 14;
		
		System.out.println("--- 산술 대입 연산 전 ---");
		System.out.println("num1 : " + num1);
		System.out.println("num2 : " + num2);
//		num2 = num2 + num1;
		num2 += num1; // 산술 대입 연산 수행
		
		System.out.println("--- 산술 대입 연산 후 ---");
		System.out.println("num1 : " + num1);
		System.out.println("num2 : " + num2);
		
		// --------------------------------------------------
		
		//** 복합대입연산자의 대입연산기호(=)는 항상 오른쪽에 적는다.
		
		num3 -= 7; // -= 산술복합대입연산자 (이항)
		num3 =- 7; // - 부호변환연산자 (단항)
		           // = 대입연산자 (이항)
	
	}
}
